<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="5dp"
    android:background="@color/blackColor"
    tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/a_image_rv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        android:src="@drawable/full_boarding_bg6"
        android:background="@color/blackColor" />

    <TextView
        android:id="@+id/a_rv_title_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="여행 제목"
        android:textColor="@color/whiteColor"
        android:theme="@style/MyAppFontTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/a_image_rv_bg"
        app:layout_constraintTop_toTopOf="@+id/a_image_rv_bg" />

    <TextView
        android:id="@+id/a_rv_tag"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="start|top|bottom"
        android:maxLines="1"
        android:text="여행국가,도시,여행지,20자 넘으면 어떻게 표시되지? "
        android:textColor="#FFFFFF"
        android:theme="@style/MyAppFontComment"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/a_image_rv_bg" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/a_image_rv_bg"
        app:srcCompat="@drawable/ic_tag_red" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="도착일 : "
        android:textColor="#FFFFFF"
        android:theme="@style/MyAppFontComment"
        app:layout_constraintStart_toEndOf="@+id/a_rv_depart_date"
        app:layout_constraintTop_toTopOf="@+id/a_rv_depart_date" />

    <TextView
        android:id="@+id/a_rv_depart_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="2020.01.01(토)"
        android:textColor="#FFFFFF"
        android:theme="@style/MyAppFontComment"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toTopOf="@+id/textView16" />

    <TextView
        android:id="@+id/a_rv_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="2020.01.07(일)"
        android:textColor="#FFFFFF"
        android:theme="@style/MyAppFontComment"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="출발일 : "
        android:textColor="#FFFFFF"
        android:theme="@style/MyAppFontComment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>