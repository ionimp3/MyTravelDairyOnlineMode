<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="CommonFolder.IntroAnimateActivity"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="#ffffff">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_loading_intro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="ani_intro_main.json"
        app:lottie_loop="true"
        app:lottie_speed="3" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ani_loading_intro_bottom"
        android:layout_width="331dp"
        android:layout_height="102dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ani_loading_intro"
        app:lottie_autoPlay="true"
        app:lottie_fileName="ani_intro_second.json"
        app:lottie_loop="true"
        app:lottie_speed="3" />

    <TextView
        android:id="@+id/text_intro_first_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titlemain_handwrite_inklipquid"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/val_str_intro_firstMessage"

        android:theme="@style/IntroAppTheme"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ani_loading_intro_bottom"
        app:layout_constraintVertical_bias="0.191" />

    <TextView
        android:id="@+id/text_intro_second_message"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mainsub_han_eng_notosanskr_light"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:text="@string/val_str_intro_secondMessage"
        android:theme="@style/IntroAppTheme"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_intro_first_message"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
