<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:text="닉네임 변경"
        android:textColor="@color/darkGrayColor"
        android:theme="@style/MyAppFontTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_dialog_nicname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_round_edit_sign"
            android:gravity="center"
            android:hint="허용 : 20자"
            android:imeOptions="actionDone"
            android:maxLength="20"
            android:textColor="@color/darkGrayColor"
            android:textStyle="bold"
            android:theme="@style/MyAppFontsubTitle" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_nicname_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_round_btn"
            android:text="확인"
            android:textColor="@color/darkGrayColor"
            android:textStyle="bold"
            android:theme="@style/MyAppFontContent" />

        <Button
            android:id="@+id/btn_dialog_nicname_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_round_btn"
            android:text="초기화"
            android:textColor="@color/darkGrayColor"
            android:textStyle="bold"
            android:theme="@style/MyAppFontContent" />
    </LinearLayout>

</LinearLayout>
